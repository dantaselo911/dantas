  ];

  // ====== FUN√á√ïES ======
  function normalizar(txt) {
    if (!txt) return '';
    return String(txt)
      .toLowerCase()
      .normalize("NFD")
      .replace(/[\u0300-\u036f]/g, "")
      .replace(/\s+/g, " ")
      .trim();
  }

  function atualizarStatus(msg, cor="#ecf0f1") {
    statusDiv.textContent = msg;
    statusDiv.style.color = cor;
  }

  function clicarProximo() {
    const btn = [...document.querySelectorAll("button,a")].find(b =>
      /pr[o√≥]xima?|avan[c√ß]ar|continuar|seguinte|prosseguir/i.test(b.textContent.trim())
    );
    if (btn) {
      btn.scrollIntoView({behavior:"smooth", block:"center"});
      setTimeout(()=>btn.click(),300);
    }
  }

  function responderPeloTexto() {
    const numEl = [...document.querySelectorAll("*")].find(el =>
      /quest[√£a]o\s*(\d+)/i.test(el.textContent)
    );
    if (!numEl) return;
    const numero = parseInt(numEl.textContent.match(/quest[√£a]o\s*(\d+)/i)[1]);
    if (numero === ultimoNumeroQuestao) return;
    ultimoNumeroQuestao = numero;

    const questao = gabarito.find(q => q.questao_numero === numero);
    if (!questao) {
      atualizarStatus(`‚ö†Ô∏è Quest√£o ${numero} n√£o no gabarito`, "#e67e22");
      return;
    }

    const correta = normalizar(questao.alternativa_correta);

    // üîé procura em <p> com input radio
    const candidatos = [...document.querySelectorAll("p")].filter(el => {
      if (!el.textContent) return false;
      if (!el.querySelector("input[type=radio]")) return false;
      const txt = normalizar(el.textContent);
      return txt.includes(correta) || correta.includes(txt);
    });

    if (candidatos.length === 0) {
      atualizarStatus(`‚ö†Ô∏è Alternativa n√£o encontrada Q${numero}`, "#e67e22");
      return;
    }

    const alvo = candidatos[0];
    alvo.scrollIntoView({behavior:"smooth", block:"center"});
    setTimeout(() => {
      const input = alvo.querySelector('input[type="radio"]');
      if (input && !input.disabled) input.click();
      else alvo.click();
      atualizarStatus(`‚úÖ Quest√£o ${numero} respondida!`, "#27ae60");
      setTimeout(clicarProximo, 800);
    }, 500);
  }

  // ====== PAINEL ======
  const overlay = document.createElement('div');
  overlay.innerHTML = `
    <div style="position:fixed;top:20px;right:20px;background:#2c3e50;color:#fff;
                padding:12px;border-radius:10px;width:300px;font-family:Arial;z-index:99999;
                box-shadow:0 4px 20px rgba(0,0,0,0.5);">
      <h3 style="margin:0 0 10px 0;font-size:16px;display:flex;justify-content:space-between;align-items:center;">
        ü§ñ AutoResponder
        <button id="fecharBtn" style="background:#e74c3c;border:none;color:#fff;width:24px;height:24px;
                border-radius:50%;cursor:pointer;">‚úï</button>
      </h3>
      <div id="status" style="margin-bottom:10px;font-size:14px">Aguardando...</div>
      <button id="iniciarBtn" style="background:#27ae60;border:none;color:#fff;padding:8px;
              border-radius:5px;font-weight:bold;width:100%">‚ñ∂Ô∏è Iniciar Automa√ß√£o</button>
      <button id="pararBtn" style="background:#e67e22;border:none;color:#fff;padding:8px;
              border-radius:5px;font-weight:bold;width:100%;margin-top:8px;display:none;">‚èπÔ∏è Parar</button>
    </div>
  `;
  document.body.appendChild(overlay);

  const statusDiv = overlay.querySelector('#status');
  const iniciarBtn = overlay.querySelector('#iniciarBtn');
  const pararBtn = overlay.querySelector('#pararBtn');
  const fecharBtn = overlay.querySelector('#fecharBtn');

  fecharBtn.addEventListener('click', () => overlay.remove());

  let observando = false;
  let ultimoNumeroQuestao = null;

  function iniciar() {
    if (observando) return;
    observando = true;
    iniciarBtn.style.display = "none";
    pararBtn.style.display = "block";
    responderPeloTexto();
    const observer = new MutationObserver(()=>{ if(observando) responderPeloTexto(); });
    observer.observe(document.body,{childList:true,subtree:true});
    overlay.observer = observer;
    overlay.intervalo = setInterval(()=>{ if(observando) responderPeloTexto(); },2000);
    atualizarStatus("‚ñ∂Ô∏è Automa√ß√£o iniciada","#27ae60");
  }

  function parar() {
    observando = false;
    iniciarBtn.style.display = "block";
    pararBtn.style.display = "none";
    if (overlay.observer) overlay.observer.disconnect();
    if (overlay.intervalo) clearInterval(overlay.intervalo);
    atualizarStatus("‚èπÔ∏è Automa√ß√£o parada.");
  }

  iniciarBtn.addEventListener('click', iniciar);
  pararBtn.addEventListener('click', parar);

  atualizarStatus("‚úÖ Sistema carregado. Clique em 'Iniciar'.","#27ae60");

})();
